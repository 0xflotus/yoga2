{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "rootDir": "./src",
    "outDir": "dist",
    "sourceMap": true,
    "lib": ["es2015", "esnext.asynciterable", "es2017"],
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "esModuleInterop": true
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules"]
}
